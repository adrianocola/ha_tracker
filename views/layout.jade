html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/vendor/jquery.js')
    script(src='/javascripts/vendor/underscore.js')
    script(src='/javascripts/vendor/backbone.js')

    script(src='/javascripts/ha_tracker/models.js')
    script(src='/javascripts/ha_tracker/collections.js')
    script(src='/javascripts/ha_tracker/views.js')
    script(src='/javascripts/ha_tracker/routes.js')
    script(src='/javascripts/ha_tracker.js')

    <!-- Templates -->

    script(type="text/template",id="enemy-template")
        div
            span.enemyName <%= name %>
            button.deleteEnemy.button-02 X
            button.add-game.button-01 +
        ul.games

    script(type="text/template", id="enemies-template")
        h2 Enemies
        button#add-enemy Add Enemy
        ul.enemies

    script(type="text/template",id="add-enemy-template")
        input#add-enemy-name(type="text",placeholder="Enemy Name")
        button.cancel-add-enemy.button-02 X
        button.confirm-add-enemy.button-01 L


    script(type="text/template",id="add-game-template")
        select.add-game-player-race
            option(value="Council") Council
            option(value="Dark Elves") Dark Elves
            option(value="Dwarves") Dwarves
            option(value="Tribe") Tribe
        select.add-game-enemy-race
            option(value="Council") Council
            option(value="Dark Elves") Dark Elves
            option(value="Dwarves") Dwarves
            option(value="Tribe") Tribe
        button.cancel-add-game.button-02 X
        button.confirm-add-game.button-01 L

    script(type="text/template",id="game-template")
        a.game-text <%= num %>  - <%= playerRace %> vs <%= enemyRace %>
        //img.deleteGame(src='/images/delete-icon.png')
        button.deleteGame.button-02 -

    script(type="text/template",id="selected-game-template")
        h2 Selected Game
        <% if(name) print("<h3>" + name + "</h3>"); %>

    script(type="text/template", id="player-items-template")
        h3 Player - <%= playerRace %>
        ul.items

    script(type="text/template", id="enemy-items-template")
        h3 Enemy - <%= enemyRace %>
        ul.items

    script(type="text/template", id="item-template")
        <% print('<img class=\"itemImg\" src=\"' + itemImg + '\"/>'); %>
        span.itemName <%= itemName %>
        span.itemCount <%= itemCount %>
        button.itemSub.button-02 -
        button.itemAdd.button-01 +


  body
    block content