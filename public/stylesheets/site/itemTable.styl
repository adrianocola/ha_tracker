@import '../common'

#current-game .items-panel.itemTable
    height: 500px

.player-items.itemTable, .enemy-items.itemTable
    height: 500px

div.player-items-mask.itemTable, div.enemy-items-mask.itemTable
    height: 500px

div.player-items-mask.itemTable
    margin-left: 10px

div.enemy-items-mask.itemTable
    margin-left: 314px

.items.itemTable
    margin: 0 0 10px -10px
    padding: 0 0 0 15px
    font: 12px "Lucida Grande", Helvetica, Arial, sans-serif
    list-style: none

.items.itemTable li
    position: relative
    display: inline
    list-style: none
    width: 70px
    height: 90px
    float: left
    margin: 0 10px 10px 0

.itemImg.itemTable
    width: 100px
    height: 100px
    vertical-align: -5px

.click-to-reset.itemTable
    line-height: 10px
    position: absolute
    cursor: pointer
    top: 55px
    left: 17px
    width: 70px
    color: white
    font-weight:bold
    text-align: center
    font: 10px "Lucida Grande", Helvetica, Arial, sans-serif
    //opacity: 0.9
    -moz-box-shadow:inset 0px 1px 0px 0px #f7c5c0;
    -webkit-box-shadow:inset 0px 1px 0px 0px #f7c5c0;
    box-shadow:inset 0px 1px 0px 0px #f7c5c0;
    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #fc8d83), color-stop(1, #e4685d) );
    background:-moz-linear-gradient( center top, #fc8d83 5%, #e4685d 100% );
    //filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#fc8d83', endColorstr='#e4685d');
    background-color:#fc8d83;
    border:1px solid #e85959
    text-shadow:1px 1px 0px #b23e35;
    display: none

.items.itemTable li.item.zero:hover .click-to-reset
    display: block

.items.itemTable li:hover .itemImg
    width: 110px
    height: 110px

.items.itemTable li:hover .itemCount
   top: -25px
   left: 23px

.itemCount.itemTable
    transition background-color 1s ease-in-out
    position: relative
    top: -25px
    left: 17px
    float: right
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
    width: 20px
    height: 20px
    color: white
    text-align: center
    line-height: 20px
    background-color: #fc8d83
    border: 2px solid white
    border-radius(25px)
    -moz-box-shadow:inset 0px 1px 0px 0px #f7c5c0;
    -webkit-box-shadow:inset 0px 1px 0px 0px #f7c5c0;
    box-shadow:inset 0px 1px 0px 0px #f7c5c0;
    -moz-box-shadow: 0px 1px 4px rgba(0,0,0,1);
    -webkit-box-shadow: 0px 1px 4px rgba(0,0,0,1);
    box-shadow: 0px 1px 4px rgba(0,0,0,1);
    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #fc8d83), color-stop(1, #e4685d) );
    background:-moz-linear-gradient( center top, #fc8d83 5%, #e4685d 100% );
    text-shadow:1px 1px 0px #666666

.item.zero .itemCount.itemTable
    box-shadow:inset 0px 1px 0px 0px #ffffff
    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #ededed), color-stop(1, #dfdfdf) )
    background:-moz-linear-gradient( center top, #ededed 5%, #dfdfdf 100% )
    //filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#ededed', endColorstr='#dfdfdf')
    -moz-box-shadow: 0px 1px 4px rgba(0,0,0,1);
    -webkit-box-shadow: 0px 1px 4px rgba(0,0,0,1);
    box-shadow: 0px 1px 4px rgba(0,0,0,1);
    background-color:#ededed
    border:2px solid #dcdcdc
    color:#777777
    text-shadow:1px 1px 0px #ffffff

.itemName.itemTable
    display: none

.itemSub.itemTable
    display: none

.itemAdd.itemTable
    display: none

.itemPerc.itemTable
    display: none

.player-items.itemTable h3, .enemy-items.itemTable h3
    padding: 10px 25px
    margin: 400px 0 0 0
