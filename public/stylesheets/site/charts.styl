div.enemyStatsName
    text-align: center
    margin-top: 10px
    font: 32px "Lucida Grande", Helvetica, Arial, sans-serif

div.enemyStats
    text-align: center
    margin-top: 20px

div.enemyStats div
    display: inline-block
    width: 24%

.statsValue
    font: 24px "Lucida Grande", Helvetica, Arial, sans-serif
    margin-left: 4px

div.statsInProgress .statsValue
    color: #ffc477

div.statsWins .statsValue
    color: #b8e356

div.statsLosses .statsValue
    color: #fc8d83

div.enemyGraphs
    margin-top: 20px

#winsGraph, #lossesGraph, #councilChart, #darkelvesChart, #dwarvesChart, #tribeChart
    display: inline-block

#councilTable, #councilTable2, #darkelvesTable, #darkelvesTable2, #dwarvesTable, #dwarvesTable2, #tribeTable, #tribeTable2
    display: inline-block

#enemiesTable
    margin-bottom: 20px
    margin-top: 20px

.chartImage
    width: 180px
    height: 48px
    display: block
    margin-left: auto
    margin-right: auto

div.tableTitle
    text-align: center
    font: 16px "Lucida Grande", Helvetica, Arial, sans-serif

.noCharts
    text-align: center
    color: red
    margin-top: 20px
