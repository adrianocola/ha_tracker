@import '../common'

#current-game .items-panel.itemList
    height: 700px

.player-items.itemList, .enemy-items.itemList
    height: 700px

div.player-items-mask.itemList, div.enemy-items-mask.itemList
    height: 700px

div.player-items-mask.itemList
    margin-left: 10px

div.enemy-items-mask.itemList
    margin-left: 314px

.items.itemList
    margin: 0 0 10px -10px
    padding: 0 0 0 15px
    font: 12px "Lucida Grande", Helvetica, Arial, sans-serif
    list-style: none

.items.itemList li
    list-style: none

.itemImg.itemList
    width: 50px
    height: 50px
    vertical-align: -10px
    cursor: pointer

.click-to-reset.itemList
    display: none

.itemCount.itemList
    display: inline-block
    width: 50px
    font: 20px "Lucida Grande", Helvetica, Arial, sans-serif
    text-align: center
    cursor: pointer

.item.zero .itemCount.itemList
    color: #aaaaaa

.itemName.itemList
    display: inline-block
    width: 70px
    text-align: left

.item.zero .itemName.itemList
    color: #aaaaaa

.itemSub.itemList
    border-radius(6px)
    vertical-align: 5px

.itemAdd.itemList
    border-radius(6px)
    vertical-align: 5px

.itemPerc.itemList
    display: inline-block
    width: 45px
    text-align: center

.item.zero .itemPerc.itemList
    color: #aaaaaa

.player-items.itemList h3, .enemy-items.itemList h3
    padding: 10px 25px
