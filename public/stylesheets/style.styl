enemy-grad-start = #fafafa
enemy-grad-end = #fafafa

.enemy-items
    float: right
    width: 280px
    //border: 1px solid #DDDDDD
    margin: 0 10px 0 0
    -moz-box-shadow:inset 0px 1px 0px 0px #ffffff
    -webkit-box-shadow:inset 0px 1px 0px 0px #ffffff
