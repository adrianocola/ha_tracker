.addGamePanel:hover
    border: 1px solid grey
    margin: 5px 5px 0 -20px
    line-height: 25px

.addGamePanel .add-game-label
    display: inline-block
    width: 45px
    margin-left: 5px
    font: 12px "Lucida Grande", Helvetica, Arial, sans-serif


.add-game-player-race,.add-game-enemy-race
    border:1px solid #dcdcdc
    display:inline-block
    color:#777777
    width:100px
    padding:4px 5px
    margin: 0 5px 0 10px
    text-decoration:none
    text-shadow:1px 1px 0px #ffffff



.deleteEnemy
    border-radius(25px)
    font-family:arial
    font-size:15px
    font-weight:bold
    padding:2px 0
    width: 25px
    height: 25px
    float: right
    margin: 2px 5px 0 10px
