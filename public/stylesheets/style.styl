img-size = 40px

.itemImg
    width: img-size
    height: img-size
    vertical-align: -5px

.itemName
    display: inline-block
    width: 90px
    text-align: left

.itemCount
    display: inline-block
    width: 50px
    text-align: center

.itemSub
    border-radius(6px)

.itemAdd
    border-radius(6px)



.add-game
    border-radius(25px)
    font-family:arial
    font-size:20px
    font-weight:bold
    padding: 1px 5px
    margin: 2px 0 0 20px
