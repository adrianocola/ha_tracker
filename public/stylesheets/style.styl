border-radius = 10px

#player
    clear: left
    float: left
    width: 330px
    height: 600px
    overflow: auto
    padding: 5px 10px 20px 5px
    margin: 10px 0 0 10px
    display: inline
    border: 1px solid grey
    -moz-border-radius: border-radius
    -webkit-border-radius: border-radius
    border-radius: border-radius

#current-game
    float: right
    width: 560px
    height: 600px
    padding: 5px 5px 20px 10px
    margin: 10px 10px 0 0
    display: inline
    border: 1px solid grey
    -moz-border-radius: border-radius
    -webkit-border-radius: border-radius
    border-radius: border-radius

.game
    color: #888888
    background-color: white
    line-height: 25px
    padding: 3px 6px 3px 6px
    margin: 5px 5px 0 -20px
    border: 1px solid grey
    -moz-border-radius: border-radius
    -webkit-border-radius: border-radius
    border-radius: border-radius
    list-style: none
    -moz-box-shadow: 1px 1px 2px rgba(0,0,0,1);
    -webkit-box-shadow: 1px 1px 2px rgba(0,0,0,1);
    box-shadow: 1px 1px 2px rgba(0,0,0,1);

.game:hover
    border: 2px solid black
    color: black
    //margin: 2px 5px 0 -20px
    line-height: 23px

.selected-game
    color: white
    list-style: none
    padding: 3px 6px 3px 6px
    margin: 5px 5px 0 -20px
    background-color: #bbbbbb
    line-height: 25px
    border: 1px solid black
    -moz-border-radius: border-radius
    -webkit-border-radius: border-radius
    border-radius: border-radius
    -moz-box-shadow: 0px 0px 15px rgba(255,255,255,1), inset 0px 0px 7px rgba(0,0,0,1);
    -webkit-box-shadow: 0px 0px 15px rgba(255,255,255,1), inset 0px 0px 7px rgba(0,0,0,1);
    box-shadow: 0px 0px 15px rgba(255,255,255,1), inset 0px 0px 7px rgba(0,0,0,1);



.cancel-add-game
    float: right
    width: 20px
    height: 20px
    border: 0
    margin: 3px 0 0 0
    -moz-border-radius:25px
    -webkit-border-radius:25px
    border-radius:25px

.confirm-add-game
    float: right
    width: 20px
    height: 20px
    margin: 3px 5px 0 0
    -moz-border-radius:25px
    -webkit-border-radius:25px
    border-radius:25px
    -moz-transform: scaleX(-1) rotate(-45deg); /* Gecko */
    -o-transform: scaleX(-1) rotate(-45deg); /* Operah */
    -webkit-transform: scaleX(-1) rotate(-45deg); /* webkit */
    transform: scaleX(-1) rotate(-45deg); /* standard */


.deleteGame
    float: right
    width: 20px
    height: 20px
    font-size:20px
    font-weight:bold
    margin: 3px 0 0 0
    padding: 0 0 0 0
    line-height: 15px
    vertical-align: middle
    -moz-border-radius:6px
    -webkit-border-radius:6px
    border-radius:6px
    display: none

.game:hover .deleteGame
    display: block

.selected-game .deleteGame
    display: block

