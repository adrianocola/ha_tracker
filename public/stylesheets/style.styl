@import 'common'

body
    width:100%
    height:100%

a.link
    color: #00f;
    text-decoration: none

a.link:hover
    color: #f90;
    text-decoration: underline

.spinner-mini
    position: relative
    margin-left: auto
    margin-right:auto
    width: 0%

.spinner-small
    margin: 10px 0 0 10px
    margin-left: auto
    margin-right:auto
    width: 0%

.spinner-medium
    margin-top: 20px
    position: relative
    margin-left: auto
    margin-right:auto
    width: 0%

.spinner-big
    margin-top: 50%
    margin-left: auto
    margin-right:auto
    width: 0%

.hidden
    display: none

.separator
    margin: 10px 0 15px 0
    height: 1px
    border-top: 1px dotted grey
    text-align: center
    position: relative

body
  padding: 30px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

#main
    float: left
    width: 100%
    background-color: #EEEEEE
    margin: -40px 0 30px 0

#main-container
    margin: 0 auto
    width: 960px

#main-layout
    float: left
    width: 960px
    background-color: #FFFFFF

#header
    float: left
    width: 940px
    padding: 0 10px
    color: #FFFFFF
    background-color: #AAAAAA
    position: relative

#player
    clear: left
    float: left
    width: 280px
    height: 600px
    overflow: auto
    padding: 5px 10px 20px 5px
    margin: 10px 0 0 10px
    display: inline
    border: 1px solid grey
    border-radius(10px)

#player h2
    color:#555555
    font-family:arial
    font-weight:bold
    text-decoration:none
    text-shadow:1px 1px 0px #ffffff

#current-game
    float: right
    width: 610px
    height: 600px
    padding: 5px 5px 20px 10px
    margin: 10px 10px 0 0
    display: inline
    border: 1px solid grey
    border-radius(10px)

#current-game h2
    color:#555555
    font-family:arial
    font-weight:bold
    text-decoration:none
    text-shadow:1px 1px 0px #ffffff

#current-game .game-info
    float: right
    margin-top: -40px
    margin-right: 15px

#current-game .game-info input
    margin-left: 15px

#current-game .game-info span
    margin-left: 3px

#current-game .game-info select
    margin-left: 5px


.game
    width: 220px
    color: #888888
    background-color: white
    line-height: 30px
    margin: 5px 5px 0 -20px
    border: 1px solid grey
    border-radius(10px)
    list-style: none
    //-moz-box-shadow: 1px 1px 2px rgba(0,0,0,1);
    //-webkit-box-shadow: 1px 1px 2px rgba(0,0,0,1);
    //box-shadow: 1px 1px 2px rgba(0,0,0,1);
    cursor: pointer

.game:hover
    color: white
    background-color: #888888
    border: 1px solid black

.selected-game
    width: 208px
    color: white
    list-style: none
    padding: 3px 6px 3px 6px
    margin: 5px 5px 0 -20px
    background-color: #bbbbbb
    line-height: 30px
    height: 30px
    border: 1px solid black
    border-radius(10px)
    -moz-box-shadow: 0px 0px 15px rgba(255,255,255,1), inset 0px 0px 7px rgba(0,0,0,1);
    -webkit-box-shadow: 0px 0px 15px rgba(255,255,255,1), inset 0px 0px 7px rgba(0,0,0,1);
    box-shadow: 0px 0px 15px rgba(255,255,255,1), inset 0px 0px 7px rgba(0,0,0,1);



.cancel-add-game
    float: right
    width: 20px
    height: 20px
    border: 0
    margin: -8px 5px 0 0
    border-radius(25px)

.confirm-add-game
    float: right
    width: 20px
    height: 20px
    margin: -8px 5px 0 0
    border-radius(25px)
    -moz-transform: scaleX(-1) rotate(-45deg); /* Gecko */
    -o-transform: scaleX(-1) rotate(-45deg); /* Operah */
    -webkit-transform: scaleX(-1) rotate(-45deg); /* webkit */
    transform: scaleX(-1) rotate(-45deg); /* standard */


.deleteGame
    float: right
    width: 20px
    height: 20px
    font-size:20px
    font-weight:bold
    margin: 7px 6px 0 0
    padding: 0 0 0 0
    line-height: 15px
    border-radius(6px)
    display: none

.game:hover .deleteGame
    display: block

.selected-game .deleteGame
    display: block
    margin: 5px 2px 0 0

.gameNum
    float: left
    border-radius(10px)
    border-right: 1px solid #999999
    width: 31px
    height: 36px
    line-height: 38px
    text-align: center
    margin: -1px 0 0 -3px
    background-color: #aaaaaa
    color: white

.game:hover .gameNum
    border-right: 1px solid #bbbbbb
    background-color: #555555

.selected-game .gameNum
    //color: black
    background-color: #bbffbb
    width: 30px
    height: 36px
    margin: -4px 0 0 -8px
    border-right: 2px solid #666666
    -moz-box-shadow: 1px 0px 2px rgba(0,0,0,0.49);
    -webkit-box-shadow: 1px 0px 2px rgba(0,0,0,0.49);
    box-shadow: 1px 0px 2px rgba(0,0,0,0.49);
    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #b8e356), color-stop(1, #a5cc52) )
    background:-moz-linear-gradient( center top, #b8e356 5%, #a5cc52 100% )
    //filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#b8e356', endColorstr='#a5cc52')
    background-color:#b8e356
    border:1px solid #83c41a

.raceIcon
    width: 30px
    height: 30px
    vertical-align: middle
    margin: 0 5px 3px 5px

.gamePanel
    display: inline
    margin-left: 30px

.enemyName
    margin: 0 0 0 10px
    color:#777777
    font-family:arial
    font-size:15px
    font-weight:bold
    text-decoration:none
    text-shadow:1px 1px 0px #ffffff

.enemies
    margin: 0 0 0 0

.enemies h2
    margin-left: 15px
    display: inline-block
    color:#555555
    font-family:arial
    font-weight:bold
    text-decoration:none
    text-shadow:1px 1px 0px #ffffff

#filter
    border-radius(6px)
    width: 95%
    margin-left: 10px
    margin-right: auto
    line-height: 20px
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

.enemy
    background-color: #EEEEEE
    border: 1px solid grey
    padding: 5px 0 15px 5px
    margin: 10px 0 0 -30px
    line-height: 30px
    list-style: none
    -moz-box-shadow:inset 0px 1px 0px 0px #ffffff
    -webkit-box-shadow:inset 0px 1px 0px 0px #ffffff
    box-shadow:inset 0px 1px 0px 0px #ffffff
    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #ededed), color-stop(1, #dfdfdf) )
    background:-moz-linear-gradient( center top, #ededed 5%, #dfdfdf 100% )
    //filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#ededed', endColorstr='#dfdfdf')
    background-color:#ededed
    border-radius(6px)
    border:1px solid #dcdcdc


.addEnemyPanel
    height: 30px

#add-enemy-name
    border-radius(6px)
    font-size:12px
    height: 20px
    width: 160px
    font-weight:bold
    margin: 0 0 0 10px

.cancel-add-enemy
    border-radius(25px)
    font-family:arial
    font-size:15px
    font-weight:bold
    padding:2px 0
    width: 25px
    height: 25px
    float: right
    margin: 2px 5px 0 10px

.confirm-add-enemy
    float: right
    width: 25px
    height: 25px
    margin: 2px 0 0 0
    font-family:arial
    font-size:15px
    font-weight:bold
    border-radius(25px)
    -moz-transform: scaleX(-1) rotate(-45deg); /* Gecko */
    -o-transform: scaleX(-1) rotate(-45deg); /* Operah */
    -webkit-transform: scaleX(-1) rotate(-45deg); /* webkit */
    transform: scaleX(-1) rotate(-45deg); /* standard */




